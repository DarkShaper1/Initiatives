<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for WP-Recall Plugin">
    <description>Sniffs for WordPress plugins</description>

    <!-- Exclude -->
    <exclude-pattern>/languages/*</exclude-pattern>
    <exclude-pattern>/assets/css/animate-css/*</exclude-pattern>
    <exclude-pattern>/assets/js/datepicker/*</exclude-pattern>
    <exclude-pattern>/assets/js/fileupload/*</exclude-pattern>
    <exclude-pattern>/assets/js/fselect/*</exclude-pattern>
    <exclude-pattern>/assets/js/jssor.slider/*</exclude-pattern>
    <exclude-pattern>/assets/js/say-cheese/*</exclude-pattern>
    <exclude-pattern>/assets/js/ssi-modal/*</exclude-pattern>
    <exclude-pattern>/add-on/publicpost/js/magicsuggest/*</exclude-pattern>

    <!-- Exclude the Composer Vendor directory. -->
    <exclude-pattern>/vendor/*</exclude-pattern>

    <!-- Exclude the Node Modules directory. -->
    <exclude-pattern>/node_modules/*</exclude-pattern>

    <!-- Exclude minified Javascript files. -->
    <exclude-pattern>*.min.js</exclude-pattern>

    <!-- exclude the WordPress-Extra standard. -->
    <rule ref="WordPress">
        <exclude name="Squiz"/>
        <exclude name="Generic"/>
        <exclude name="PEAR"/>
        <exclude name="PSR2"/>
        <exclude name="WordPress.WP"/>
        <exclude name="WordPress.CodeAnalysis"/>
        <exclude name="WordPress.DateTime.CurrentTimeTimestamp.Requested"/>
        <exclude name="WordPress.Security.NonceVerification.Recommended"/>
        <exclude name="WordPress.Security.NonceVerification.Missing"/>
        <exclude name="WordPress.NamingConventions"/>
        <exclude name="WordPress.Arrays"/>
        <exclude name="WordPress.PHP"/>
        <exclude name="WordPress.WhiteSpace"/>
        <exclude name="WordPress.DB.DirectDatabaseQuery.NoCaching"/>
        <exclude name="WordPress.DB.DirectDatabaseQuery.DirectQuery"/>
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
    </rule>
</ruleset>